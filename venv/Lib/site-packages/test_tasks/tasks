def tasks():
    rnd = random.randint(1, 3)
    write_msg(event.user_id, hi[rnd])
    for ev in longpoll.listen():
        if ev.type == VkEventType.MESSAGE_NEW:
            if ev.to_me:
                answer = ev.text.lower()
                if answer == lang[rnd]:
                    write_msg(event.user_id, 'да')
                    break
                else:
                    write_msg(event.user_id, 'нет')
                    break
    pass